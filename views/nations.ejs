<head>
  <%- include('./import.ejs') %>
    <title>
      <%= title %>
    </title>
</head>


<body>

  <%- include('./header.ejs') %>
    <div class="px-6 lg:px-8 py-10">
      <% if (isAuth==true && isAdmin===true) { %>
      <div class="">
        <button data-target="modal-js-example" type="button" class="js-modal-trigger btn btn-outline-success">
          Create Nation
        </button>
      </div>
      <% } %>
      <div class="mt-8 flow-root">
        <div class="-my-2 -mx-6 overflow-x-auto lg:-mx-8">
          <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
            <div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 sm:rounded-lg">
              <table class="min-w-full divide-y divide-gray-300">
                <thead class="bg-gray-50">
                  <tr>
                    <th scope="col" class="py-3.5 pl-6 pr-3 text-left text-sm font-semibold text-gray-900">Name</th>
                    <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Description</th>
                    <% if(isAuth && isAdmin) { %>
                    <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Actions</th>
                    <% } %>
                  </tr>
                </thead>
                <tbody class="divide-y divide-gray-200 bg-white">
                  <% nations.forEach(function(nation){ %>
                    <tr>
                      <td class="whitespace-nowrap py-4 pl-6 pr-3 text-sm font-medium text-gray-900">
                        <%= nation.name %>
                      </td>
                      <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                        <%= nation.description %>
                      </td>

                      <% if(isAuth && isAdmin) { %>
                      <td class="relative flex gap-5 whitespace-nowrap py-4 pl-3 pr-6 text-right text-sm font-medium">
                        <a href="/nations/<%=nation.id%>" class="text-green-500 hover:text-indigo-900">Edit</a>
                        <a href="nations/delete/<%=nation.id%>" 
                          onclick="return confirm('Are you sure you want to delete this item?')" 
                          class="text-red-600 hover:text-red-900">Delete</a>
                      </td>
                      <% } %>
                    </tr>
                    <% })%>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- ----------------------------------------------- -->
    <%- include('./createNations.ejs') %>
      <%- include('./footer.ejs') %>
        <%- include('./script.ejs') %>
</body>

</html>